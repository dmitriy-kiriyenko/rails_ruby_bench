{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "builder_suffix": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-04cc2b0ad9e30a9c8",
        "instance_type": "t3.micro",
        "ssh_username": "ubuntu",
        "ami_name": "rails-ruby-benchmark {{timestamp}}",
        "run_tags": {
            "Name": "Packer RailsRubyBench Builder{{user `builder_suffix`}}"
        },
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_size": 40,
            "volume_type": "gp2",
            "delete_on_termination": true
          }
        ]
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
        ]
    }, {
        "type": "file",
        "source": "ami.json",
        "destination": "/home/ubuntu/ami.json"
    }, {
        "type": "shell",
        "script": "discourse_install.sh"
    }, {
        "type": "shell",
        "inline": [
            "cd /home/ubuntu && git clone https://github.com/noahgibbs/rails_ruby_bench.git && git clone https://github.com/noahgibbs/rsb.git"
        ]
    }, {
        "type": "file",
        "source": "benchmark_software.json",
        "destination": "/home/ubuntu/benchmark_software.json"
    }, {
        "type": "shell",
        "execute_command": "cd /home/ubuntu; {{ .Vars }} /home/ubuntu/.rbenv/shims/ruby {{ .Path }}",
        "script": "setup_discourse.rb"
    }, {
        "type": "shell",
        "inline": "[ -f /tmp/setup_discourse_ran_correctly ] || (echo 'Setup_discourse.rb failed to run to completion...'; exit 1)  # Make sure setup_discourse.rb ran correctly"
    }, {
        "type": "shell",
        "script": "misc_install.sh"
    }, {
        "type": "shell",
        "environment_vars": [
            "RAILS_RUBY_BENCH_URL=https://github.com/noahgibbs/rails_ruby_bench.git",
            "RAILS_RUBY_BENCH_TAG="
        ],
        "script": "setup.rb"
    }, {
        "type": "shell",
        "inline": "[ -f /tmp/setup_ran_correctly ] || (echo 'Setup.rb failed to run to completion...'; exit 1)  # Make sure setup.rb ran correctly"
    }, {
        "type": "shell",
        "execute_command": "cd /home/ubuntu; . .rvm/scripts/rvm; {{ .Vars }} /home/ubuntu/.rbenv/shims/ruby {{ .Path }}",
        "script": "setup_discourse_gems.rb"
    }, {
        "type": "shell",
        "inline": "[ -f /tmp/setup_discourse_gems_ran_correctly ] || (echo 'Setup_discourse.rb failed to run to completion...'; exit 1)  # Make sure setup_discourse_gems.rb ran correctly"
    }, {
        "type": "file",
        "source": "90-tune-kernel.conf",
        "destination": "/tmp/90-tune-kernel.conf"
    }, {
        "type": "shell",
        "inline": "sudo mv /tmp/90-tune-kernel.conf /etc/sysctl.d/"
    }
  ]
}
